@{
    ViewData["Title"] = "About Us";
}

<!-- Hero/Banner Section -->
<section class="about-hero container-fluid px-0" style="padding: 110px 0 60px 0; background: linear-gradient(120deg, #181a1b 60%, #7ecbff 120%); min-height: 40vh;">
    <div class="row justify-content-center mx-0">
        <div class="col-lg-8 col-md-10 col-12 text-center">
            <h1 class="display-3 fw-bold mb-3" style="letter-spacing:0.01em; background: linear-gradient(90deg, #7ecbff 0%, #b16cea 50%, #ff6bcb 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">About MultiSoftware Enterprise</h1>
            <p class="lead text-light mb-0">Empowering the digital world with secure, scalable, and innovative <span class="fw-bold text-info">Azure</span> cloud-first solutions.</p>
        </div>
    </div>
</section>

<!-- Mission & Values Section -->
<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h2 class="mb-4 fw-bold">Our Mission</h2>
            <p class="lead mb-4">To deliver world-class software solutions that drive digital transformation for businesses worldwide. We believe in a cloud-first approach, leveraging the latest technologies and <span class="text-info">Microsoft Azure</span> to ensure security, scalability, and innovation for our clients and to help our team learn Azure hands-on.</p>
            <h3 class="mt-5 mb-3 fw-semibold">Our Values</h3>
            <div class="row g-4">
                <div class="col-md-3 col-6 text-center">
                    <div class="p-3 rounded-4 bg-dark text-light h-100">
                        <i class="fas fa-lightbulb fa-2x mb-2 text-info"></i>
                        <div class="fw-bold">Innovation</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 text-center">
                    <div class="p-3 rounded-4 bg-dark text-light h-100">
                        <i class="fas fa-shield-alt fa-2x mb-2 text-info"></i>
                        <div class="fw-bold">Security & Trust</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 text-center">
                    <div class="p-3 rounded-4 bg-dark text-light h-100">
                        <i class="fas fa-globe fa-2x mb-2 text-info"></i>
                        <div class="fw-bold">Global Collaboration</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 text-center">
                    <div class="p-3 rounded-4 bg-dark text-light h-100">
                        <i class="fas fa-users fa-2x mb-2 text-info"></i>
                        <div class="fw-bold">Customer Success</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

