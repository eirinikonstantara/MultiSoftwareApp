@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section container-fluid px-0" style="padding: 120px 0 80px 0; background: linear-gradient(120deg, #101216 60%, #0078d4 120%); min-height: 60vh;">
    <div class="row align-items-center justify-content-center mx-0">
        <div class="col-lg-7 col-md-10 col-12 text-center text-lg-start" data-aos="fade-right">
            <h1 class="display-2 fw-bold mb-3" style="letter-spacing:0.01em; background: linear-gradient(90deg, #7ecbff 0%, #b16cea 50%, #ff6bcb 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">MultiSoftware Enterprise</h1>
            <p class="lead mb-3 fs-3 text-light">Empowering your digital transformation with secure, scalable, and innovative Azure cloud solutions.</p>
            <span class="badge bg-info text-dark fs-6 mb-4"><i class="fab fa-microsoft me-1"></i>Built on Microsoft Azure</span><br>
            <a href="#why-choose" class="btn btn-primary btn-lg px-5 py-3 fs-5 mt-2 me-2">
                <i class="fas fa-rocket me-2"></i>Get Started
            </a>
            <a href="#services" class="btn btn-outline-light btn-lg px-5 py-3 fs-5 mt-2">
                <i class="fas fa-cubes me-2"></i>See Our Services
            </a>
        </div>
        <div class="col-lg-3 d-none d-lg-flex justify-content-center align-items-center" data-aos="fade-left">
            <div class="feature-icon floating text-info" style="font-size: 6rem;">
                <i class="fab fa-microsoft"></i>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section id="why-choose" class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8 text-center">
            <h2 class="fw-bold mb-3">Why Choose MultiSoftware Enterprise?</h2>
            <p class="lead text-muted">We combine deep Azure expertise with a relentless focus on security, scalability, and customer support to help you succeed in the cloud.</p>
        </div>
    </div>
    <div class="row g-4 justify-content-center">
        <div class="col-md-3 col-6">
            <div class="card bg-dark text-light border-0 rounded-4 p-4 h-100 text-center">
                <i class="fab fa-microsoft fa-2x mb-3 text-info"></i>
                <div class="fw-bold mb-2">Azure Experts</div>
                <div class="small">Certified Azure professionals delivering best-in-class cloud solutions.</div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-dark text-light border-0 rounded-4 p-4 h-100 text-center">
                <i class="fas fa-shield-alt fa-2x mb-3 text-info"></i>
                <div class="fw-bold mb-2">Enterprise Security</div>
                <div class="small">End-to-end security, compliance, and data protection for your business.</div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-dark text-light border-0 rounded-4 p-4 h-100 text-center">
                <i class="fas fa-expand-arrows-alt fa-2x mb-3 text-info"></i>
                <div class="fw-bold mb-2">Scalable Solutions</div>
                <div class="small">Cloud-native architecture that grows with your needs.</div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-dark text-light border-0 rounded-4 p-4 h-100 text-center">
                <i class="fas fa-headset fa-2x mb-3 text-info"></i>
                <div class="fw-bold mb-2">24/7 Support</div>
                <div class="small">Dedicated support team to help you every step of the way.</div>
            </div>
        </div>
    </div>
</section>

<!-- Metrics Section -->
<section class="features-section container-fluid py-5" style="background: #181a1b;">
    <div class="row justify-content-center g-4">
        <div class="col-md-3 col-6 text-center">
            <div class="stat-card p-4 rounded-4 bg-dark text-light">
                <div class="stat-number fs-1 fw-bold" style="color:#7ecbff;">350+</div>
                <div class="stat-label">Global Employees</div>
            </div>
        </div>
        <div class="col-md-3 col-6 text-center">
            <div class="stat-card p-4 rounded-4 bg-dark text-light">
                <div class="stat-number fs-1 fw-bold" style="color:#7ecbff;">1000+</div>
                <div class="stat-label">Daily Visitors</div>
            </div>
        </div>
        <div class="col-md-3 col-6 text-center">
            <div class="stat-card p-4 rounded-4 bg-dark text-light">
                <div class="stat-number fs-1 fw-bold" style="color:#7ecbff;">5000+</div>
                <div class="stat-label">API Requests/Day</div>
            </div>
        </div>
        <div class="col-md-3 col-6 text-center">
            <div class="stat-card p-4 rounded-4 bg-dark text-light">
                <div class="stat-number fs-1 fw-bold" style="color:#7ecbff;">250GB</div>
                <div class="stat-label">Media Storage</div>
            </div>
        </div>
    </div>
</section>

<!-- Trusted By Section -->
<section class="container py-5" style="padding-bottom: 1.5rem !important;">
    <div class="row justify-content-center mb-3">
        <div class="col-lg-8 text-center">
            <h2 class="fw-bold mb-2">Trusted By Leading Organizations</h2>
            <div class="mx-auto mb-3" style="max-width: 320px;">
                <hr class="my-3" style="border: none; height: 2px; background: linear-gradient(90deg, #7ecbff 0%, #b16cea 50%, #ff6bcb 100%); opacity: 0.5;" />
            </div>
            <p class="lead text-info mb-4" style="font-weight: 500;">Our clients trust us to deliver secure, scalable Azure solutions that power their success.</p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 d-flex justify-content-center">
            <div class="d-flex flex-row justify-content-center align-items-center gap-5 flex-wrap py-2" style="min-height: 80px;">
                <!-- Azure Logo -->
                <img src="https://upload.wikimedia.org/wikipedia/commons/a/a8/Microsoft_Azure_Logo.svg" alt="Azure" height="40" class="trusted-logo-img" />
                <!-- Microsoft Logo -->
                <img src="https://upload.wikimedia.org/wikipedia/commons/4/44/Microsoft_logo.svg" alt="Microsoft" height="40" class="trusted-logo-img" />
                <!-- Contoso (placeholder) -->
                <img src="https://dummyimage.com/100x40/b16cea/fff&text=Contoso" alt="Contoso" height="40" class="trusted-logo-img rounded-2" />
                <!-- Fabrikam (placeholder) -->
                <img src="https://dummyimage.com/100x40/ff6bcb/fff&text=Fabrikam" alt="Fabrikam" height="40" class="trusted-logo-img rounded-2" />
                <!-- AdventureWorks (placeholder) -->
                <img src="https://dummyimage.com/120x40/0078d4/fff&text=AdventureWorks" alt="AdventureWorks" height="40" class="trusted-logo-img rounded-2" />
            </div>
        </div>
    </div>
    <style>
        .trusted-logo-img {
            filter: grayscale(1) brightness(0.8);
            opacity: 0.85;
            transition: filter 0.2s, opacity 0.2s, transform 0.2s;
            max-width: 120px;
        }
        .trusted-logo-img:hover {
            filter: grayscale(0) brightness(1.1) drop-shadow(0 2px 8px #7ecbff44);
            opacity: 1;
            transform: scale(1.08);
        }
    </style>
</section>

<!-- How We Work Section -->
<section class="container py-5" style="padding-top: 2rem !important; padding-bottom: 2rem !important;">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8 text-center">
            <h2 class="fw-bold mb-3">How We Work</h2>
            <p class="lead text-muted">A proven process to ensure your Azure cloud journey is smooth, secure, and successful.</p>
        </div>
    </div>
    <div class="row g-4 justify-content-center">
        <div class="col-md-3 col-6 text-center">
            <div class="card bg-dark text-light border-0 rounded-4 p-4 h-100">
                <i class="fas fa-comments fa-2x mb-3 text-info"></i>
                <div class="fw-bold mb-2">1. Consultation</div>
                <div class="small">We listen to your needs and design a custom Azure strategy.</div>
            </div>
        </div>
        <div class="col-md-3 col-6 text-center">
            <div class="card bg-dark text-light border-0 rounded-4 p-4 h-100">
                <i class="fas fa-cloud-upload-alt fa-2x mb-3 text-info"></i>
                <div class="fw-bold mb-2">2. Migration</div>
                <div class="small">Seamless, secure migration of your data and apps to Azure.</div>
            </div>
        </div>
        <div class="col-md-3 col-6 text-center">
            <div class="card bg-dark text-light border-0 rounded-4 p-4 h-100">
                <i class="fas fa-cogs fa-2x mb-3 text-info"></i>
                <div class="fw-bold mb-2">3. Optimization</div>
                <div class="small">We optimize for performance, cost, and security on Azure.</div>
            </div>
        </div>
        <div class="col-md-3 col-6 text-center">
            <div class="card bg-dark text-light border-0 rounded-4 p-4 h-100">
                <i class="fas fa-headset fa-2x mb-3 text-info"></i>
                <div class="fw-bold mb-2">4. Support</div>
                <div class="small">Ongoing support and monitoring for your peace of mind.</div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonial Section -->
<section class="container py-5" style="padding-bottom: 0 !important; margin-bottom: 0 !important;">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <blockquote class="blockquote text-light fs-4 mb-4" style="font-style:italic;">
                <span class="text-info">“</span> MultiSoftware Enterprise helped us migrate to Azure seamlessly and securely. Their expertise and support are unmatched! <span class="text-info">”</span>
            </blockquote>
            <figcaption class="blockquote-footer text-info">
                CTO, Contoso Ltd.
            </figcaption>
        </div>
    </div>
</section>

