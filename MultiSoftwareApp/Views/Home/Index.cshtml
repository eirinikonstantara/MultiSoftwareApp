@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 text-center" data-aos="fade-up">
            <h2 class="section-title mb-5">Welcome to the Future of Cloud Computing</h2>
            <p class="lead mb-5">Experience the power of cloud-native solutions with MultiSoftware Enterprise</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4" data-aos="fade-right" data-aos-delay="100">
            <div class="card feature-card mb-4">
                <div class="card-body">
                    <div class="feature-icon">
                        <i class="fas fa-globe"></i>
                    </div>
                    <h3>Global Infrastructure</h3>
                    <p>With 350+ employees across multiple regions, we deliver world-class software solutions with a truly global reach.</p>
                    <div class="mt-3">
                        <span class="badge bg-primary me-2">Azure</span>
                        <span class="badge bg-primary me-2">Global</span>
                        <span class="badge bg-primary">Scalable</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
            <div class="card feature-card mb-4">
                <div class="card-body">
                    <div class="feature-icon">
                        <i class="fas fa-cloud"></i>
                    </div>
                    <h3>Cloud-First Strategy</h3>
                    <p>Built entirely on Microsoft Azure, our infrastructure is designed for scalability, security, and future growth.</p>
                    <div class="mt-3">
                        <span class="badge bg-primary me-2">Cloud</span>
                        <span class="badge bg-primary me-2">Secure</span>
                        <span class="badge bg-primary">Future-Proof</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4" data-aos="fade-left" data-aos-delay="300">
            <div class="card feature-card mb-4">
                <div class="card-body">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Enterprise Security</h3>
                    <p>Multi-factor authentication and comprehensive access control ensure your data is always protected.</p>
                    <div class="mt-3">
                        <span class="badge bg-primary me-2">MFA</span>
                        <span class="badge bg-primary me-2">Secure</span>
                        <span class="badge bg-primary">Compliant</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6" data-aos="fade-right" data-aos-delay="400">
            <div class="card feature-card">
                <div class="card-body">
                    <h3><i class="fas fa-chart-line me-2"></i>Performance Metrics</h3>
                    <div class="row mt-4">
                        <div class="col-6">
                            <div class="stat-card">
                                <div class="stat-number">1000+</div>
                                <div class="stat-label">Daily Visitors</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-card">
                                <div class="stat-number">5000+</div>
                                <div class="stat-label">API Requests</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6" data-aos="fade-left" data-aos-delay="500">
            <div class="card feature-card">
                <div class="card-body">
                    <h3><i class="fas fa-database me-2"></i>Data Management</h3>
                    <div class="row mt-4">
                        <div class="col-6">
                            <div class="stat-card">
                                <div class="stat-number">250GB</div>
                                <div class="stat-label">Media Storage</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-card">
                                <div class="stat-number">5TB</div>
                                <div class="stat-label">Log Storage</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center" data-aos="fade-up" data-aos-delay="600">
            <a href="#contact" class="btn btn-primary btn-lg">
                <i class="fas fa-rocket me-2"></i>Start Your Cloud Journey
            </a>
        </div>
    </div>
</div>
